# OpenAI API Configuration
# Option 1: Single API Key
OPENAI_API_KEY=your-openai-api-key-here

# Option 2: Multiple API Keys (for better rate limit handling)
# OPENAI_API_KEYS=["sk-key1", "sk-key2", "sk-key3"]

# USDA FoodData Central API Key (optional, but recommended)
# Get your free API key from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your-usda-api-key-here

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database (SQLite is default, no configuration needed)
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/calorie_tracker

# For MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/calorie_tracker

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379/1

# Email Configuration (optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (for production)
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
# CORS_ALLOWED_ORIGINS=["http://localhost:3000", "https://your-frontend.com"]

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=logs/django.log

# File Upload Settings
# MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
# MEDIA_ROOT=media/
# MEDIA_URL=/media/

# Session Settings
# SESSION_COOKIE_AGE=86400  # 24 hours in seconds
# SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# JWT Settings
# JWT_ACCESS_TOKEN_LIFETIME=3600  # 1 hour in seconds
# JWT_REFRESH_TOKEN_LIFETIME=86400  # 24 hours in seconds