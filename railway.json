{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python manage.py migrate && gunicorn --bind 0.0.0.0:$PORT --workers 3 calorie_tracker.wsgi:application",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}
